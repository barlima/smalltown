<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <small>
        <%= @user.email %>
      </small>
    </section>

    <div>
      <%= button_to 'New Trip', trips_new_path, method: 'get', class: "btn btn-primary", id: "green-button" %>
    </div>
  </aside>

</div>