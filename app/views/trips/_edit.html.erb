<%= form_for(@trip, url: trip_path(params[:id])) do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :start_date %>
  <%= f.text_field :start_date, class: 'form-control' %>

  <%= f.label :end_date %>
  <%= f.text_field :end_date, class: 'form-control' %>

  <%= f.submit yield(:button_text), class: "btn btn-primary", id: "green-button" %>
<% end %>