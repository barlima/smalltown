<% provide(:title, 'Your trips') %>

<div class="row">
  <div class="index-new-trip">
    <p>Ready for more adventures?</p>
    <%= button_to 'New Trip', trips_new_path, method: 'get', class: "btn btn-primary", id: "green-button" %>
  </div>
  <div>
    <% if @trips.empty? %>
      <h1>You have no trips :(</h1>
    <% else %>
      <table class="default-table trips-table">
        <tr>
          <th></th>
          <th>Name</th>
          <th>From</th>
          <th>Till</th>
          <th></th>
        </tr>
          <% @trips.each do |trip| %>
            <tr>
              <td></td>
              <td><%= trip.name %></td>
              <td><%= trip.start_date.to_date %></td>
              <td><%= trip.end_date.to_date %></td>
              <td class="small">
                <%= link_to edit_trip_path(trip.id) do %>
                  <i class="glyphicon glyphicon-wrench"></i>
                <% end %>
                <%= link_to trip_path(trip.id), method: :delete, data: {confirm: "Are you sure?"} do %>
                  <i class="glyphicon glyphicon-remove"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
      </table>
    <% end %>
  </div>
</div>